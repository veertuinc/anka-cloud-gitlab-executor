pipeline {
    agent { node {
            label 'cloud_container_host'
        }
    }
    stages {
        stage('Release') {
            steps {
                script {
                    docker.image('goreleaser/goreleaser:latest').inside('--entrypoint "" --env GOCACHE=/tmp/.gocache') {
                        sh 'goreleaser build --clean --snapshot'
                    }
                }
            }
        }
    }
}